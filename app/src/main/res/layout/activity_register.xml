<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/regLayout10"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/register_register"
            android:textSize="25sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reglayout1"
        android:layout_below="@id/regLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_register"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/newName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:ems="10"
            android:hint="@string/enter_name_register"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reglayout2"
        android:layout_below="@id/reglayout1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/username_register" />

        <EditText
            android:id="@+id/newUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:ems="10"
            android:hint="@string/enter_username_register" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reglayout3"
        android:layout_below="@id/reglayout2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/password_register" />

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:ems="10"
            android:hint="@string/enter_password_register" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reglayout4"
        android:layout_below="@id/reglayout3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/re_password_register" />

        <EditText
            android:id="@+id/newRePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/confirm_password_register" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reglayout5"
        android:layout_below="@id/reglayout4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savings_goal_register"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/newSavings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/goal_register" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reglayout6"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@id/reglayout5"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="@string/daily_expense_register"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/newAnnual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="28dp"
            android:hint="@string/daily_amount_register"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reglayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reglayout6"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/income_register"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/newAnnual2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="46dp"
            android:hint="@string/yearly_income_register"
            android:ems="10" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegisterComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reglayout7"
        android:layout_marginTop="30dp"
        android:text="@string/sign_me_up" />

</RelativeLayout>